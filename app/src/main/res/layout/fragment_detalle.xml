<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetalleFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/det_cardView"
        android:layout_width="370dp"
        android:layout_height="690dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/img_Detalle"
                android:layout_width="292dp"
                android:layout_height="317dp"
                android:layout_marginTop="75dp"
                android:scaleType="fitCenter"
                android:src="@drawable/j_walker_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nom_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:layout_marginTop="400dp"
                android:text="Johnnie Walker\nRed Label"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dscrp_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Botella x 700 ml."
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="@+id/nom_Detalle"
                app:layout_constraintTop_toBottomOf="@+id/nom_Detalle" />

            <TextView
                android:id="@+id/ant_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="S/ 0.00"
                android:textColor="@color/dark_gray"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/dscrp_Detalle"
                app:layout_constraintTop_toBottomOf="@+id/dscrp_Detalle" />

            <TextView
                android:id="@+id/abrv_Det_moneda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="125dp"
                android:layout_marginTop="10dp"
                android:text="S/"
                android:textColor="@color/red"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ant_precio" />

            <TextView
                android:id="@+id/precio_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="80.00"
                android:textColor="@color/red"
                android:textSize="40dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/abrv_Det_moneda"
                app:layout_constraintStart_toEndOf="@+id/abrv_Det_moneda"
                app:layout_constraintTop_toTopOf="@+id/abrv_Det_moneda" />

            <Button
                android:id="@+id/btn_addProducto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/blue"
                android:text="Ir al Carrito"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/precio_Detalle" />

            <TextView
                android:id="@+id/Tit_Categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/TituloCategoria"
                android:textAlignment="textStart"
                android:textColor="@color/blue_navy"
                android:textSize="36dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.113"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>