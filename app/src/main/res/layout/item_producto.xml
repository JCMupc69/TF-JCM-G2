<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_producto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/producto_imagen"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_imagen" />

        <TextView
            android:id="@+id/producto_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:hint="Nombre producto"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/producto_imagen"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/producto_descrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Descripcion"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/producto_nom"
            app:layout_constraintTop_toBottomOf="@+id/producto_nom" />

        <TextView
            android:id="@+id/producto_moneda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text="S/"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/producto_imagen"
            app:layout_constraintTop_toBottomOf="@+id/producto_descrip" />

        <TextView
            android:id="@+id/producto_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:hint="0.00"
            android:textColor="@color/red"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/producto_moneda"
            app:layout_constraintTop_toBottomOf="@+id/producto_descrip" />

        <TextView
            android:id="@+id/agregar_Prod"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/caja_agregar"
            android:gravity="center"
            android:text="Añadir"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

